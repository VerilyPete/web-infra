# ~/webserver/.env
# This file is safe to commit - contains only placeholders
# Real values injected via GitHub Secrets during deployment

# ===============================
# TAILSCALE CONFIGURATION
# ===============================
TAILSCALE_AUTH_KEY=__TAILSCALE_AUTH_KEY__
HOSTNAME=__HOSTNAME__

# ===============================
# CLOUDFLARE TUNNEL CONFIGURATION  
# ===============================
CLOUDFLARE_TUNNEL_TOKEN=__CLOUDFLARE_TUNNEL_TOKEN__

# ===============================
# WEBSITE CONFIGURATION
# ===============================
WEBSITE_REPO_URL=https://github.com/VerilyPete/peterhollmer.com.git
WEBSITE_REPO_BRANCH=main
SYNC_INTERVAL=300

# ===============================
# APPLICATION CONFIGURATION
# ===============================
APP_ENV=production
APP_PORT=8081

# ===============================
# REGISTRY CONFIGURATION
# ===============================
USE_REGISTRY=true
PUSH_TO_REGISTRY=false
GHCR_TOKEN=__GHCR_TOKEN__

# ===============================
# DEPLOYMENT CONFIGURATION
# ===============================
SERVER_HOST=__SERVER_HOST__
SSH_USER=opc

# ===============================
# FORMSPREE CONFIGURATION
# ===============================
# Your Formspree form endpoint
FORMSPREE_ENDPOINT=__FORMSPREE_ENDPOINT__
